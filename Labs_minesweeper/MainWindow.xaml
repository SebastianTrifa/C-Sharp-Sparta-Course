<Window x:Class="Labs_minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labs_minesweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto"
        SizeToContent="WidthAndHeight" >
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top" Height="30" VerticalAlignment="Top">
            <ToolBar Name="MyToolbar" Background="FloralWhite" Width="360" Height="30" >
                <Button x:Name="EasyButton" Background="LightGray" Content="Easy" Click="Toolbar_Click01"/>
                <Button x:Name="MediumButton" Background="LightGray" Content="Medium" Click="Toolbar_Click02" />
                <Button x:Name="HardButton" Background="LightGray" Content="Hard" Click="Toolbar_Click03" />
        </ToolBar>
    </ToolBarTray>
    <Grid Name="Sweeper">
    
    </Grid>
    </DockPanel>
</Window>
