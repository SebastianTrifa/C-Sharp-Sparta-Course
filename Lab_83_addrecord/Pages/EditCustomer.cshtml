@page
@model Lab_83_addrecord.Pages.EditCustomerModel
@{
    ViewData["Title"] = "EditCustomer";
}

<h2>EditCustomer</h2>

<div class="row">
    <p>Add a new customer</p>
    <form action="EditCustomer" method="GET">
        <div class="form-group">
            <label for="customerID">CustomerID</label>
            <input type="text" name="customerID" class="form-control" id="customerID" placeholder="ZYX2A" />
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Select</button>
    </form>
    <form action="EditCustomer" method="GET">
        <div class="form-group">
            <label for="customerName">Customer Name</label>
            <input type="text" name="customerName" class="form-control" id="customerName" placeholder="Name" value="@Model.ccn"/>
        </div>
        <div class="form-group">
            <label for="companyName">Company Name</label>
            <input type="text" name="companyName" class="form-control" id="companyName" placeholder="Company" value="@Model.ccon"/>
        </div>
        <div class="form-group">
            <label for="City">City</label>
            <input type="text" name="city" class="form-control" id="city" placeholder="City" value="@Model.cc" />
            <input type="hidden" name="ID" class="form-control" id="ID" value="@Model.cid" />
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
    </form>
</div>

<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>Customer ID</th>
        <th>Company Name</th>
        <th>Contact Name</th>
    </tr>
    @foreach (var c in Model.customers)
    {
        <tr>
            <td>@c.CustomerID</td>
            <td>@c.CompanyName</td>
            <td>@c.ContactName</td>
        </tr>
    }
</table>
